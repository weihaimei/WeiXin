.container {
  position: relative;
  width: 100%; 
  height: 100%;
  box-sizing: border-box;
  background-color: #F7F7F7;
} 
.container .header{
  position: relative;
  margin-bottom: 3px; 
  zoom: 1;
  width: 100%;
  height: 45px;
}
.top{
  position: absolute;
  background-color: #fff;
  margin-top: 8px; 
  margin-left: 20px;
  border: 0;
  font-family: 雅黑;
  font-size: 14px;
  border-radius: 5px;
  height: 30px;
  width: 75%;
}
 .top image{
  position: absolute; 
  padding-left: 5px;
  padding-top: 5px;
  margin-top: 3px;
  margin-right: 15px;
  display: inline-block;
  width: 25px;
  height: 15px;
}
.top input{
  margin-top: 4px;
  margin-left: 30px; 
  padding-left: 3px;    
}
.container .classify{
  margin: 10px 8px; 
  border-radius: 4px;
  background-color: #fff;
}
.classify:after {
    clear: both;
    content: "."; 
    display: block;
    font-size: 0;
    height: 0;
    line-height: 0;
    visibility: hidden; 
}
.classify .single{
  width: 17%;
  float: left;
  margin: 1.5%;
} 
.single image{
  width: 100%; 
  height: 55px; 
  margin-top: 5px;  
  border-radius: 100%;
} 
.single p{
  color: #333;
  font-size: 14px;
  padding-left: 18px;
  text-align: center;
}  
.container .goods{
  background-color: #fff;
  margin-bottom: 10px;
  overflow: auto;
}
.goods-title{
  padding: 8px 0; 
  text-align: center; 
  font-size: 20px; 
  color: #f93;
}
.jian{
  display: block;
  margin-left: 3.3%;
  margin-right: 3.3%;
}
.jian image{
  border-radius: 10px;
  box-shadow: 0 0 1.5px #dedede; 
  width: 100%;
}
.goods-wrapper{
  margin-left: 3.3%;
  overflow: auto;
  margin-top: 10px;
}
.scroll-item{
  margin-top: 0px;
  margin-bottom: 10px;
  overflow-x: auto;
  white-space: nowrap; 
  font-size: 0;
  z-index: 1;
} 
.owl-stage{
  position: relative;
  white-space: nowrap;
  font-size: 0;
}   
.item{
  display: inline-block;
  width: 100%;  
  border-radius: 10px;
  overflow: auto; 
  text-align: center; 
  font-size: 12px; 
  color: #333;  
}
.item image{
  display: block; 
  border-radius: 10px;
  width: 119.5px;  
  height: 119.5px;
  box-shadow: 0 0 0.5px #dedede;  
}
.big{
  margin: 3px 0;
  padding-top: 4px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.c75{
  margin: 6px 0;
  color: #757575;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
